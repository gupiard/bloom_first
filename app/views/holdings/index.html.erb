<div class="page-header">
  <h1>Holdings</h1>
</div>

<p><a href="/holdings/new" class="btn btn-primary">Add a New Holding</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Objective</th>
      <th>Etf</th>
      <th>Shares</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @holdings.each do |holding| %>
      <tr>
        <td><%= holding.objective_id %></td>
        <td><%= holding.etf_id %></td>
        <td><%= holding.shares %></td>
        <td>
          <a href="/holdings/<%= holding.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/holdings/<%= holding.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_holding/<%= holding.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

