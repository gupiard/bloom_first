<% if @account.errors.any? %>
  <% @account.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Edit Account #<%= @account.id %></h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_account/<%= @account.id %>" class="form-horizontal">
      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="col-sm-2 control-label">
          User
        </label>
        <div class="col-sm-10">
          <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @account.user_id %>">
        </div>
      </div>

      <!-- Label and input for category -->
      <div class="form-group">
        <label for="category" class="col-sm-2 control-label">
          Category
        </label>
        <div class="col-sm-10">
          <input type="text" id="category" name="category" placeholder="Category" class="form-control" value="<%= @account.category %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Update Account" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

