<div class="page-header">
  <h1>Accounts</h1>
</div>

<p><a href="/accounts/new" class="btn btn-primary">Add a New Account</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>User</th>
      <th>Category</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.user_id %></td>
        <td><%= account.category %></td>
        <td>
          <a href="/accounts/<%= account.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/accounts/<%= account.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_account/<%= account.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

