<% if @target_portfolio.errors.any? %>
<% @target_portfolio.errors.full_messages.each do |message| %>
<div class="alert alert-dismissable alert-danger">
  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
  <%= message %>
</div>
<% end %>
<% end %>

<div class="page-header">
  <h1>Add Target Portfolio</h1>
</div>

<div class="row">
  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Target Portfolio</h3>
      </div>
      <div class="panel-body">
        <form action="/create_target_portfolio" class="form-horizontal">
          <!-- Label and input for name -->
          <div class="form-group">
            <label for="name" class="col-sm-2 control-label">
              Name
            </label>
            <div class="col-sm-10">
              <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @target_portfolio.name %>">
            </div>
          </div>

          <!-- Label and input for risk_rank -->
          <div class="form-group">
            <label for="risk_rank" class="col-sm-2 control-label">
              Risk rank
            </label>
            <div class="col-sm-10">
              <input type="text" id="risk_rank" name="risk_rank" placeholder="Risk rank" class="form-control" value="<%= @target_portfolio.risk_rank %>">
            </div>
          </div>

          <!-- Label and input for pea_compatible -->
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <div class="checkbox">
                <label for="pea_compatible">
                  <input type="checkbox" id="pea_compatible" name="pea_compatible" value="1" <%= "checked" if @target_portfolio.pea_compatible %>>
                  PEA compatible
                </label>
              </div>
            </div>
          </div>

          <!-- Label and input for expected_return -->
          <div class="form-group">
            <label for="expected_return" class="col-sm-2 control-label">
              Expected return
            </label>
            <div class="col-sm-10">
              <input type="text" id="expected_return" name="expected_return" placeholder="Expected return" class="form-control" value="<%= @target_portfolio.expected_return %>">
            </div>
          </div>

          <!-- Label and input for standard_deviation -->
          <div class="form-group">
            <label for="standard_deviation" class="col-sm-2 control-label">
              Standard deviation
            </label>
            <div class="col-sm-10">
              <input type="text" id="standard_deviation" name="standard_deviation" placeholder="Standard deviation" class="form-control" value="<%= @target_portfolio.standard_deviation %>">
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <input type="submit" value="Create Portfolio" class="btn btn-primary">
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Asset Allocations</h3>
      </div>
      <div class="panel-body">
        <form action="/create_target_portfolio">

          <% (1..20).each do |i| %>

          <div class="col-sm-8 form-group">
          <% if i == 1  %>
            <label class="control-label" for="inputDefault">ETF Asset</label>
            <% end %>
            <%= select_tag "etf_id_#{i}", options_from_collection_for_select(@etfs, "id", "name"), class: "form-control input-sm" %>
          </div>

          <div class="col-sm-4 form-group">
            <% if i == 1  %>
            <label class="control-label" for="inputDefault">Allocation Weight</label>
            <% end %>
            <input type="text" class="form-control input-sm" id="etf_weight_#{i}" placeholder="Weight <%= i %>">
          </div>
          <% end %>



        </form>
      </div>
    </div>
  </div>

</div>
