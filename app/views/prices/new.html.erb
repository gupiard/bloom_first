<% if @price.errors.any? %>
  <% @price.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Price</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_price" class="form-horizontal">
      <!-- Label and input for etf_id -->
      <div class="form-group">
        <label for="etf_id" class="col-sm-2 control-label">
          Etf
        </label>
        <div class="col-sm-10">
          <input type="text" id="etf_id" name="etf_id" placeholder="Etf" class="form-control" value="<%= @price.etf_id %>">
        </div>
      </div>

      <!-- Label and input for close_date -->
      <div class="form-group">
        <label for="close_date" class="col-sm-2 control-label">
          Close date
        </label>
        <div class="col-sm-10">
          <input type="text" id="close_date" name="close_date" placeholder="Close date" class="form-control" value="<%= @price.close_date %>">
        </div>
      </div>

      <!-- Label and input for close_price -->
      <div class="form-group">
        <label for="close_price" class="col-sm-2 control-label">
          Close price
        </label>
        <div class="col-sm-10">
          <input type="text" id="close_price" name="close_price" placeholder="Close price" class="form-control" value="<%= @price.close_price %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Price" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

