<div class="page-header">
  <h1>Objectives</h1>
</div>

<p><a href="/objectives/new" class="btn btn-primary">Add a New Objective</a></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Account</th>
      <th>Target portfolio</th>
      <th>Name</th>
      <th>Category</th>
      <th>Target date</th>
      <th>Target value</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @objectives.each do |objective| %>
      <tr>
        <td><%= objective.account_id %></td>
        <td><%= objective.target_portfolio_id %></td>
        <td><%= objective.name %></td>
        <td><%= objective.category %></td>
        <td><%= objective.target_date %></td>
        <td><%= objective.target_value %></td>
        <td>
          <a href="/objectives/<%= objective.id %>" class="btn btn-primary">
            <i class="fa fa-search-plus"></i>
          </a>
        </td>
        <td>
          <a href="/objectives/<%= objective.id %>/edit" class="btn btn-warning">
            <i class="fa fa-edit"></i>
          </a>
        </td>
        <td>
          <a href="/delete_objective/<%= objective.id %>" class="btn btn-danger">
            <i class="fa fa-trash-o"></i>
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

