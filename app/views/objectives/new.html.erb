<% if @objective.errors.any? %>
  <% @objective.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h1>Add Objective</h1>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_objective" class="form-horizontal">
      <!-- Label and input for account_id -->
      <div class="form-group">
        <label for="account_id" class="col-sm-2 control-label">
          Account
        </label>
        <div class="col-sm-10">
          <input type="text" id="account_id" name="account_id" placeholder="Account" class="form-control" value="<%= @objective.account_id %>">
        </div>
      </div>

      <!-- Label and input for target_portfolio_id -->
      <div class="form-group">
        <label for="target_portfolio_id" class="col-sm-2 control-label">
          Target portfolio
        </label>
        <div class="col-sm-10">
          <input type="text" id="target_portfolio_id" name="target_portfolio_id" placeholder="Target portfolio" class="form-control" value="<%= @objective.target_portfolio_id %>">
        </div>
      </div>

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="col-sm-2 control-label">
          Name
        </label>
        <div class="col-sm-10">
          <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @objective.name %>">
        </div>
      </div>

      <!-- Label and input for category -->
      <div class="form-group">
        <label for="category" class="col-sm-2 control-label">
          Category
        </label>
        <div class="col-sm-10">
          <input type="text" id="category" name="category" placeholder="Category" class="form-control" value="<%= @objective.category %>">
        </div>
      </div>

      <!-- Label and input for target_date -->
      <div class="form-group">
        <label for="target_date" class="col-sm-2 control-label">
          Target date
        </label>
        <div class="col-sm-10">
          <input type="text" id="target_date" name="target_date" placeholder="Target date" class="form-control" value="<%= @objective.target_date %>">
        </div>
      </div>

      <!-- Label and input for target_value -->
      <div class="form-group">
        <label for="target_value" class="col-sm-2 control-label">
          Target value
        </label>
        <div class="col-sm-10">
          <input type="text" id="target_value" name="target_value" placeholder="Target value" class="form-control" value="<%= @objective.target_value %>">
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" value="Create Objective" class="btn btn-primary">
        </div>
      </div>
    </form>
  </div>
</div>

